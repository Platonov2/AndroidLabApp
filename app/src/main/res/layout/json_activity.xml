<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:id="@+id/idEditText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/jsonActMarginLeft"
        android:layout_marginLeft="@dimen/jsonActMarginLeft"
        android:layout_marginTop="59dp"
        android:width="@dimen/jsonActWidth"
        android:ems="10"
        android:gravity="center"
        android:hint="@string/id"
        android:importantForAutofill="no"
        android:inputType="textPersonName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="LabelFor" />

    <TextView
        android:id="@+id/userIdTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/jsonActMarginLeft"
        android:layout_marginLeft="@dimen/jsonActMarginLeft"
        android:layout_marginTop="30dp"
        android:width="@dimen/jsonActWidth"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/findPostButton" />

    <TextView
        android:id="@+id/titleTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/jsonActMarginLeft"
        android:layout_marginLeft="@dimen/jsonActMarginLeft"
        android:layout_marginTop="@dimen/jsonLabTextViewMarginTop"
        android:height="60dp"
        android:width="@dimen/jsonActWidth"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/userIdTextView" />

    <TextView
        android:id="@+id/bodyTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/jsonActMarginLeft"
        android:layout_marginLeft="@dimen/jsonActMarginLeft"
        android:layout_marginTop="@dimen/jsonLabTextViewMarginTop"
        android:width="@dimen/jsonActWidth"
        android:height="100dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/titleTextView" />

    <Button
        android:id="@+id/findPostButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/jsonActMarginLeft"
        android:layout_marginLeft="@dimen/jsonActMarginLeft"
        android:layout_marginTop="15dp"
        android:text="@string/findPostTextButton"
        android:width="@dimen/jsonActWidth"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/idEditText" />

</androidx.constraintlayout.widget.ConstraintLayout>